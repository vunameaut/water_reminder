<!-- res/drawable/edit_text_background.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Bo tròn các góc -->
    <corners android:radius="12dp" />

    <!-- Thiết lập màu nền -->
    <solid android:color="#F0F0F0"/>

    <!-- Đường viền -->
    <stroke
        android:width="1dp"
        android:color="#D3D3D3" />

    <!-- Padding bên trong -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp" />
</shape>
